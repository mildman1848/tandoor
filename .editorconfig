root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{json,js,ts}]
indent_style = space
indent_size = 2

[*.{md,txt}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4

[Dockerfile*]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4